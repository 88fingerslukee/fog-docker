# FOG Docker Stack Configuration
# Copy this file to .env and modify the values for your environment

# =============================================================================
# FOG SERVER CONFIGURATION
# =============================================================================

# FOG Web Host (FQDN - REQUIRED for Traefik routing)
FOG_WEB_HOST=fog.example.com

# FOG Web Root (usually /fog for subdirectory, / for root)
FOG_WEB_ROOT=/fog

# FOG Version
FOG_VERSION=1.5.10.1673

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database Host (use localhost for host networking)
FOG_DB_HOST=localhost

# Database Port (use 3307 to avoid conflicts with host MySQL)
FOG_DB_PORT=3307

# Database Name
FOG_DB_NAME=fog

# Database User
FOG_DB_USER=fogmaster

# Database Password
FOG_DB_PASS=fogmaster123

# Database Root Password
FOG_DB_ROOT_PASSWORD=rootpassword123

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================

# Service Hosts (use localhost for host networking)
FOG_TFTP_HOST=localhost
FOG_NFS_HOST=localhost
FOG_FTP_HOST=localhost

# Apache Ports (use custom ports to avoid conflicts)
FOG_APACHE_PORT=8080
FOG_APACHE_SSL_PORT=8443

# =============================================================================
# FOG SERVICE CREDENTIALS
# =============================================================================

# FTP Username
FOG_USERNAME=fogproject

# FTP Password
FOG_PASSWORD=fogftp123

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Multicast Interface (usually eth0)
FOG_MULTICAST_INTERFACE=eth0

# Boot Filename for DHCP
FOG_BOOTFILENAME=undionly.kpxe

# =============================================================================
# SSL CONFIGURATION
# =============================================================================

# SSL Path
FOG_SSL_PATH=/opt/fog/snapins/ssl

# HTTPS Enabled
FOG_HTTPS_ENABLED=false

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Timezone
FOG_TIMEZONE=UTC

# =============================================================================
# VOLUME PATHS
# =============================================================================

# FOG Images Directory
FOG_IMAGES_PATH=/opt/fog/images

# FOG Snapins Directory
FOG_SNAPINS_PATH=/opt/fog/snapins

# FOG Logs Directory
FOG_LOGS_PATH=/opt/fog/logs
