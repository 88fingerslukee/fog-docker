# FOG Docker Stack Configuration
# Copy this file to .env and modify the values for your environment

# =============================================================================
# FOG SERVER CONFIGURATION
# =============================================================================

# FOG Web Host (FQDN - REQUIRED for reverse proxy routing)
# No default - must be set to your domain
FOG_WEB_HOST=

# FOG Web Root (usually /fog for subdirectory, / for root)
FOG_WEB_ROOT=/fog

# FOG Version (leave empty to use latest stable release)
FOG_VERSION=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database Host (use localhost for host networking)
FOG_DB_HOST=localhost

# Database Port
FOG_DB_PORT=3306

# Database Name
FOG_DB_NAME=fog

# Database User
FOG_DB_USER=fogmaster

# Database Password
FOG_DB_PASS=fogmaster123

# Database Root Password (REQUIRED - no default for security)
FOG_DB_ROOT_PASSWORD=

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================

# Service Hosts
FOG_TFTP_HOST=localhost
FOG_NFS_HOST=localhost
FOG_FTP_HOST=localhost

# Apache Ports
FOG_APACHE_PORT=80
FOG_APACHE_SSL_PORT=443

# =============================================================================
# FOG SERVICE CREDENTIALS
# =============================================================================

# Storage FTP Username (used by all FOG services for storage access)
FOG_FTP_USER=fogproject

# Storage FTP Password (used by all FOG services for storage access)
FOG_FTP_PASS=fogftp123

# FOG Admin Username (leave empty for default: fog. This can be changed in the web interface after installation.)
FOG_ADMIN_USER=

# FOG Admin Password (leave empty for default: password. This can be changed in the web interface after installation.)
FOG_ADMIN_PASS=

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Multicast Interface (usually eth0)
FOG_MULTICAST_INTERFACE=eth0

# Boot Filename for DHCP
FOG_BOOTFILENAME=undionly.kpxe

# =============================================================================
# SSL CONFIGURATION
# =============================================================================

# Enable HTTPS (true/false)
FOG_HTTPS_ENABLED=false

# SSL Certificate File (relative to FOG_SSL_PATH)
FOG_SSL_CERT_FILE=server.crt

# SSL Private Key File (relative to FOG_SSL_PATH)
FOG_SSL_KEY_FILE=server.key

# Generate Self-Signed Certificate (true/false)
FOG_SSL_GENERATE_SELF_SIGNED=true

# SSL Certificate Common Name (for self-signed certs)
FOG_SSL_CN=

# SSL Subject Alternative Names (optional, comma-separated)
# Examples: DNS:fog.example.com,DNS:www.fog.example.com,IP:192.168.1.100
FOG_SSL_SAN=

# iPXE Protocol Override (http/https) - leave empty for auto-detection
# Use this when behind a reverse proxy to control iPXE boot URLs
FOG_IPXE_PROTOCOL=

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Timezone
TZ=UTC

# =============================================================================
# VOLUME PATHS
# =============================================================================

# FOG Images Directory (persistent storage for disk images)
# Example: /opt/fog/images or ./config/images
FOG_IMAGES_PATH=

# FOG Snapins Directory (persistent storage for snapins)
# Example: /opt/fog/snapins or ./config/snapins
FOG_SNAPINS_PATH=

# FOG Logs Directory (persistent storage for logs)
# Example: /opt/fog/logs or ./config/logs
FOG_LOGS_PATH=

# TFTP Boot Files Directory (persistent storage for PXE boot files)
# Example: /opt/fog/tftpboot or ./config/tftpboot
FOG_TFTP_PATH=

# MySQL Data Directory (persistent storage for database)
# Example: /opt/fog/mysql or ./config/mysql
FOG_MYSQL_PATH=

# SSL Certificate Directory (persistent storage for SSL certificates)
# Example: /opt/fog/ssl or ./config/ssl
FOG_SSL_PATH=
